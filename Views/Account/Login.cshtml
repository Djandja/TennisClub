                                <div class="name">
                                    <label asp-for="UserName">Email:</label><div class="clear"></div>
                                    <input asp-for="UserName" class="form-control" placeholder="example@domain.com" required="" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="pwd">
                                    <label asp-for="Password">Password:</label><div class="clear"></div>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="********" required="" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" style="background-color: darkorange">Log in</button>
                                </div>
                            </form>
                        </div>

                    </div><!--Close Login-->

                </form>
