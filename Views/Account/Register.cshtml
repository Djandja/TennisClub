@using TennisClub.Models.AccountViewModels
@model TennisClub.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<h2>@ViewData["Title"]</h2>
<div class="d-flex flex-column align-items-center mt-5">
    <h2>@ViewData["Title"]</h2>
    <div class="col-md-4 mt-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            @*<h4 class="text-center">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="mr-4"></label>
                <select asp-for="Role" asp-items="@RegisterViewModel.Roles">
                    <option>Please select role</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mr-3">Register</button>
            @Html.ActionLink("Cancel", "Users", "Account", new { @class = "btn btn-primary" })*@

            <!-- REGISTER BOX -->
            <div class="top-score-title right-score col-md-12">
                <h3>Register <span>Now</span><span class="point-int"> !</span></h3>
                <div class="col-md-12 login-page">
                    <form method="post" class="register-form">

                        <div class="email">
                            <label asp-for="Email">Email:</label><div class="clear"></div>
                            <input asp-for="Email" class="form-control" type="text" placeholder="example@domain.com" required="" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="name">
                            <label asp-for="UserName">Username:</label><div class="clear"></div>
                            <input asp-for="UserName" class="form-control" type="text" placeholder="Pera77" required="" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="name">
                            <label asp-for="FullName">Ime i prezime:</label><div class="clear"></div>
                            <input asp-for="FullName" class="form-control" type="text" placeholder="Petar Petrović" required="" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="name">
                            <label asp-for="Password">Password:</label><div class="clear"></div>
                            <input asp-for="Password" class="form-control" type="password" placeholder="********" required="" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="confirm_password">
                            <label asp-for="ConfirmPassword">ConfirmPassword:</label><div class="clear"></div>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="********" required="" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Role" class="mr-4"></label>
                            <select asp-for="Role" asp-items="@RegisterViewModel.Roles">
                                <option>Please select role</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <button type="submit" style="background-color: darkorange">Register</button>
                        @Html.ActionLink("Cancel", "Users", "Account", new { @class = "btn btn-primary" })
                        
                    </form>
                    <div class="ctn-img">
                        <img src="images/igrac.png" />
                    </div><!--Close Images-->
                    <div class="clear"></div>
                </div>

            </div><!--Close REgistration-->

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
